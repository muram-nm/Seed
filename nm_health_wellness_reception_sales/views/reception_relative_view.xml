<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="reception_relative_tree_view" model="ir.ui.view">
			<field name="name">reception.relative.tree</field>
			<field name="model">reception.relative</field>
			<field name="arch" type="xml">
				<tree>
					<field name="name"/>
					<field name="date_of_birth"/>
	                <field name="is_adult"/>
				</tree>
			</field>
		</record>

		<record id="reception_relative_form_view" model="ir.ui.view">
			<field name="name">reception.relative.form</field>
			<field name="model">reception.relative</field>
			<field name="arch" type="xml">
				<form string="Reception Relatives">
					<header>
					</header>
					<sheet>
						<div class="oe_title">
	            			<label for="name" class="oe_edit_only"/>
	                        <h1>
	                        	<field name="name" required="1"/>
	                        </h1>
	                    </div>
	                    <group>
	                    	<group>
	                    		<field name="date_of_birth"/>
	                    		<field name="age"/>
	                    		<field name="is_adult"/>
	                    	</group>
	                    	<group>
	                    	</group>
	                    </group>
					</sheet>
			    </form>
		    </field>
	    </record>

		<record id="reception_relative_kanban_view" model="ir.ui.view">
			<field name="name">reception.relative.kanban</field>
			<field name="model">reception.relative</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile">
                	<field name="name"/>
                	<field name="date_of_birth"/>
					<field name="age"/>
	                <field name="is_adult"/>
	               <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings mt4">
                                        <strong class="o_kanban_record_title"><span><field name="name"/></span></strong>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                	<field name="date_of_birth"/>
                                </div>
                                <div class="o_kanban_record_bottom">
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record> 

        <record id="reception_relative_search_view" model="ir.ui.view">
            <field name="name">reception.relative.select</field>
            <field name="model">reception.relative</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name" string="Relative"/>
                    <field name="age"/>
                    <filter string="Adult" name="is_adult"/>
               </search>
            </field>
        </record>

        <record id="action_reception_relative" model="ir.actions.act_window">
             <field name="name">Reception Relatives</field>
             <field name="res_model">reception.relative</field>
             <field name="type">ir.actions.act_window</field>
             <field name="view_mode">tree,kanban,form</field>
        </record>

        <menuitem 
        	id="menu_reception_relative"
		    action="action_reception_relative"
		    parent="nm_health_wellness_reception_sales.menu_wellness_reception_main"
		    sequence="2"/>

	</data>
</odoo>